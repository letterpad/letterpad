/*!------------------------------------------------------------------
[Modal Windows]
*/
.full-width-modal {
    .modal-dialog {
        width: 100%;
        height: 100%;
        margin: 0;
        padding: 0;

        .modal-content {
            height: auto;
            min-height: 100%;
            border-radius: 0;
            .modal-body {
                height: calc(100vh - 110px);
                overflow: scroll;
            }
        }
    }
}
