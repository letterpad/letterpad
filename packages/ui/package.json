{
  "name": "ui",
  "version": "0.0.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist",
      "require": "./dist"
    },
    "./isomorphic": {
      "import": "./dist/isomorphic.js",
      "require": "./dist/isomorphic.js"
    },
    "./css/*": "./css/*"
  },
  "module": "./dist/index.mjs",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "tsup index.tsx isomorphic.ts --dts --format cjs,esm --external react,react-dom --treeshake --sourcemap --splitting --tsconfig ./tsconfig.json",
    "dev": "bun run clean && tsup index.tsx isomorphic.ts --watch --dts --format cjs,esm --external react,react-dom --treeshake --sourcemap --splitting --tsconfig ./tsconfig.json",
    "lint": "TIMING=1 eslint \"**/*.ts*\""
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-custom": "*",
    "react": "^18.2.0",
    "tsconfig": "*",
    "tsup": "^8.0.1",
    "typescript": "^5.1.6",
    "config": "*"
  },
  "peerDependencies": {
    "next": "14.1.0"
  }
}
