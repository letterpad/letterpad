    "react-test-renderer": "18.2.0",
    "start-server-and-test": "^1.14.0",
    "ts-jest": "^27.0.3",
    "tsconfig-paths": "^3.9.0",
    "typescript": "4.3.2",
    "yaml-loader": "0.6.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,}": [
      "eslint --max-warnings=124",
      "prettier -w"
    ],
    "src/**/*.{json,css,md}": [
      "prettier -w"
    ],
