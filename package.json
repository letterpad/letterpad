    "next": "^12.2.5",
    "next-auth": "4.10.0",
    "nodemailer": "^6.7.3",
    "nprogress": "^0.2.0",
    "prisma": "^3.8.1",
    "raygun": "^0.13.1",
    "react": "^18.2.0",
