{
  "name": "letterpad-admin",
  "version": "3.1.0",
  "author": "Abhishek Saha",
  "license": "MIT",
  "scripts": {
    "codegen": "graphql-let",
    "client": "concurrently -k 'yarn dev'",
    "dev": "next",
    "build": "yarn codegen && next build",
    "test": "yarn codegen && jest --runInBand",
    "start": "next start",
    "seed": "ts-node -r tsconfig-paths/register --transpile-only ./src/graphql/db/seed/index.ts",
    "lint": "next lint",
    "lint:fix": "eslint src --fix && yarn format",
    "migrate": "prisma migrate dev --name init",
    "typecheck": "yarn tsc",
    "prisma:generate": "dotenv scripts/generatePrisma.sh",
    "prisma:migrate:create": "dotenv scripts/createMigration.sh",
    "prisma:migrate:run": "dotenv scripts/runMigration.sh",
    "prisma:studio": "dotenv scripts/studio.sh",
    "resetDemo": "ts-node -r tsconfig-paths/register --transpile-only ./src/resetDemo.ts",
    "cy:open": "cypress open --browser chrome",
    "cy:run": "cypress run --record --key e2c7bae0-47ed-49e5-8ea8-b0c26c3493f7 --browser chrome",
    "e2e:ci": "yarn seed && start-server-and-test 'yarn start' http://localhost:3000/admin/login cy:run",
    "e2e": "yarn seed && start-server-and-test 'yarn dev' http://localhost:3000/admin/login cy:open",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "prepare": "husky install"
  },
  "dependencies": {
    "@ant-design/icons": "^4.6.2",
