{
    "name": "letterpad",
    "version": "1.0.0",
    "description": ":) ",
    "main": "start.js",
    "private": true,
    "scripts": {
        "build": "NODE_ENV=production && babel api -d apiBuild && webpack --verbose --colors --display-error-details --config webpack/webpack.prod.js --env.theme=${theme}",
        "build:theme": "NODE_ENV=production webpack --verbose --colors --display-error-details --config webpack/webpack.theme.prod.js --env.theme=${theme}",
        "insert-fake": "babel-node ./api/faker/data.js",
        "preinstall": "./utils/preinstall.sh",
        "dev": "NODE_ENV=dev concurrently --kill-others \"nodemon -w api ./api/startDev.js\" \"node ./server.js --profile --json\" \"webpack --config webpack/webpack.dev.js --env.theme=${theme}\"",
        "prod": "NODE_ENV=production concurrently --kill-others \"node ./apiBuild/server.js\" \"node ./server.js\"",
        "prodPm2": "NODE_ENV=production concurrently --kill-others \"pm2 start ./apiBuild/server.js --name=lpDocsApi\" \"pm2 start ./server.js --name=lpDocs\"",
        "test": "jest --runInBand"
    },
